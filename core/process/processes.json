{
    "sentinel-s2-l2a": {
      "input_collections": ["sentinel-s2-l2a"],
      "workflow": "cog-archive",
      "output_options": {
        "path_template": "s3://sentinel-cogs/${collection}/${sentinel:utm_zone}/${sentinel:latitude_band}/${sentinel:grid_square}/${year}/${month}/${id}",
        "public_assets": "ALL",
        "collections": {
          "sentinel-s2-l2a-cogs": ".*"
        },
        "headers": {
          "CacheControl": "public, max-age=31536000, immutable"
        }
      },
      "tasks": {
        "copy-assets": {
          "batch": false,
          "assets": [],
          "drop_assets": ["visual_20m", "visual_60m"]
        },
        "convert-to-cog": {
          "batch": true,
          "assets": {
            "overview": {
              "nodata": 0,
              "blocksize": 128,
              "overview_blocksize": 64,
              "overview_resampling": "average"
            },
            "visual": {
              "nodata": 0,
              "blocksize": 1024,
              "overview_blocksize": 512,
              "overview_resampling": "average"
            },
            "B01": {
              "nodata": 0,
              "blocksize": 256,
              "overview_blocksize": 128,
              "overview_resampling": "average"
            },
